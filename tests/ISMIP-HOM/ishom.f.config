[ISMIP-HOM-A]
temperature = -30. 1.67e-5

[parameters]
geothermal = -42e-3
flow_factor = 1
#The analytical solution to ISMIP-HOM F takes n=1, the configuration needs to reflect this.
flow_exponent = 1

[CF output]
variables = thk btemp temp uvel vvel wvel uvelhom vvelhom wgrd acab diffu uvelhom_srf uvelhom_bas vvelhom_srf vvelhom_bas
frequency = 1
name = ishom.f.out.nc

[grid]
upn = 31
ewn = 100
nsn = 100
dew = 1000
dns = 1000
sigma_builtin = 2

[time]
niso = 1.
#TODO: Figure out how long this needs to run in order to reach equilibrium
tend = 300000.
ntem = 1.
tstart = 200000.
dt = 1.
nvel = 1.

[CF default]
comment = forced upper kinematic BC
title = EISMINT-2 Exp B

[options]
flow_law = 2
evolution = 0
temperature = 1
vertical_integration = 1
sliding_law = 4
marine_margin = 2
stress_calc = 2
hotstart = 1
basal_water = 0
isostasy = 0
#Periodic boundary conditions are optional according to the ISMIP-HOM document - I apply them
#because I am not sure this domain is large enough to get away with not using them.
periodic_ew = 1
periodic_ns = 1

[ho_options]
diagnostic_scheme = 1
prognostic_scheme = 1
#Use a slip ratio basal stress, again to support the analytical solution developed
basal_stress_input = 4

[CF input]
name = ishom.f.nc
time = 1
