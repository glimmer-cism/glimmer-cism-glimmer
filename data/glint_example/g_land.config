[grid]
ewn = 83 
nsn = 141
upn = 11
sigma_file = g_land.sigma

[GLINT climate]
precip_mode = 1
acab_mode = 1

[GLINT projection]
projection = 1
cpx = 42
cpy = 71
latc=71
lonc=321

[options]
temperature = 0
flow_law = 1
isostasy = 0
sliding_law = 1
basal_water = 2
marine_margin = 0
slip_coeff = 0
stress_calc = 0
evolution = 2
vertical_integration = 0
hotstart=0

[time]
dt = 1.
ntem = 1.
nvel = 1.
niso = 1.

[parameters]
log_level=6
ice_limit = 100.
marine_limit = -200.
geothermal = -5.e-2
flow_factor = 3
hydro_time = 1000.
isos_time = 3000.
basal_tract = 2 10 10 0 1

########################################
# I/O configuration follows
########################################

[CF default]
title: GLIMMER test run
institution: Glimmer Inst
references:  some reference
comment: results from the simple test run

[CF output]
name:      g_land.100a.nc
frequency: 100
variables: thk topg acab btemp artm

[CF output]
name:      g_land.1a.nc
frequency: 1
variables: glint_prcp glint_acab glint_ablt glint_artm global_orog local_orog acab glint_thk thk usurf snowd siced

[CF output]
name:      g_land.hot.nc
frequency: 100
variables: hot

[CF input]
name: g_land.input.nc
